@model TutoringProject.Models.Tutor.Tutor

@{
    ViewBag.Title = "Edit Tutor";
}

<h2>Edit Tutor</h2>

@using (Html.BeginForm("Edit", "Tutor", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.UserAccount.Fname)
        @Html.TextBoxFor(model => model.UserAccount.Fname, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserAccount.Fname)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UserAccount.Lname)
        @Html.TextBoxFor(model => model.UserAccount.Lname, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserAccount.Lname)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UserAccount.Email)
        @Html.TextBoxFor(model => model.UserAccount.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserAccount.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Delivery)
        @Html.TextBoxFor(model => model.Delivery, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Delivery)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Salary)
        @Html.TextBoxFor(model => model.Salary, new { @class = "form-control", type = "number", step = "0.01" })
        @Html.ValidationMessageFor(model => model.Salary)
    </div>

<button type="submit" class="btn btn-primary">Save Changes</button>
}