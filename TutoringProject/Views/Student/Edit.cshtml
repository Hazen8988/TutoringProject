@model TutoringProject.Models.Student.Student

@{
    ViewBag.Title = "Edit Student";
}

<h2>Edit Student</h2>

@using (Html.BeginForm("Edit", "Student", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.UserAccount.Fname)
        @Html.TextBoxFor(model => model.UserAccount.Fname, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserAccount.Fname)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UserAccount.Lname)
        @Html.TextBoxFor(model => model.UserAccount.Lname, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserAccount.Lname)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UserAccount.Email)
        @Html.TextBoxFor(model => model.UserAccount.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserAccount.Email)
    </div>


<button type="submit" class="btn btn-primary">Save Changes</button>
}