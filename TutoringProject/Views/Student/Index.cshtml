@model IEnumerable<TutoringProject.Models.Student.Student>


@{
    ViewBag.Title = "Student List";
}

<h2>Student List</h2>


<p>@Html.ActionLink("Create New", "Create")</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.First().Id)</th>
        <th>@Html.DisplayNameFor(model => model.First().Fname)</th>
        <th>@Html.DisplayNameFor(model => model.First().Lname)</th>
        <th>@Html.DisplayNameFor(model => model.First().Email)</th>
        <th>@Html.DisplayNameFor(model => model.First().Birthday)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Fname)</td>
            <td>@Html.DisplayFor(modelItem => item.Lname)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>@Html.DisplayFor(modelItem => item.Birthday)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                <span>
                    @using (Html.BeginForm("Delete", "Student", new { id = item.Id }, FormMethod.Post))
                    {
                        <button type="submit" class="btn btn-link">Delete</button>
                    }
                </span>
            </td>
        </tr>
    }
</table>